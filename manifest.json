{
	"manifest_version": 2,
	"name": "Статистика Openstat",
	"description": "Просмотр статистики сайта с установленным счетчиком Openstat/SpyLOG.",
	"version": "0.2.0",
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},
	"page_action": {
		"default_icon": "images/icon16.png",
		"default_title": "Посмотреть статистику сайта",
		"default_popup": "popup.html"
	},
	"permissions": [
		"webRequest",
		"*://openstat.net/*",
		"*://*.spylog.com/*",
		"http://rating.openstat.ru/*"
	]
}
